{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "src/run_service.py",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "src/streamlit_app.py"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "preLaunchTask": "wait-for-backend"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "FastAPI Backend",
                "Streamlit App"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            }
        }
    ]
}
